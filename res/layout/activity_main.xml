<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bkhtest.notepadshare.MainActivity">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueT"
        android:text="BlueTooth"
        android:layout_margin="16sp"
        android:layout_centerHorizontal="true"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluePower"
        android:layout_margin="16sp"
        android:text="Discover"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/devFound"
        android:layout_margin="16sp"
        android:layout_alignParentRight="true"
        android:text="Scan"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startConnection"
        android:layout_below="@id/bluePower"
        android:layout_marginLeft="16sp"
        android:layout_alignParentLeft="true"
        android:text="start connection"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/lsDeviceAdapter"
        android:layout_below="@id/startConnection"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter Text Here"
        android:layout_below="@id/lsDeviceAdapter"
        android:id="@+id/editText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSend"
        android:layout_marginLeft="16sp"
        android:layout_toRightOf="@+id/editText"
        android:layout_below="@id/lsDeviceAdapter"
        android:text="Send"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rText"
        android:layout_below="@id/editText"
        android:textSize="25sp"
        />

</RelativeLayout>

</android.support.constraint.ConstraintLayout>
